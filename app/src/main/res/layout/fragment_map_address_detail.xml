<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/headerTextView"

        android:drawableEnd="@drawable/ic_map"
        android:text="Адрес сдачи анализов"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextDetail"

            android:text="Ваш адрес"/>

        <EditText
            android:id="@+id/address_et"
            style="@style/edit_text_style"
            android:layout_width="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextDetail"

                android:text="Долгота"/>

            <EditText
                android:id="@+id/longitude_et"
                style="@style/edit_text_style"
                android:layout_width="match_parent" />


        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextDetail"

                android:text="Широта"/>

            <EditText
                android:id="@+id/laitude_et"
                style="@style/edit_text_style"
                android:layout_width="match_parent" />


        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextDetail"

                android:text="Высота"/>

            <EditText
                android:id="@+id/height_et"
                style="@style/edit_text_style"
                android:layout_width="match_parent" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextDetail"

                android:text="Квартира"/>

            <EditText
                android:id="@+id/apartment_et"
                style="@style/edit_text_style"
                android:layout_width="match_parent" />


        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextDetail"

                android:text="Подъезд"/>

            <EditText
                android:id="@+id/entrance_et"
                style="@style/edit_text_style"
                android:layout_width="match_parent" />


        </LinearLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextDetail"

                android:text="Этаж"/>

            <EditText
                android:id="@+id/floor_et"
                style="@style/edit_text_style"
                android:layout_width="match_parent" />


        </LinearLayout>

    </LinearLayout>

<LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextDetail"

            android:text="Домофон"/>

    <EditText
        android:id="@+id/intercom_et"
        style="@style/edit_text_style"
        android:layout_width="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/confirm_but"
        style="@style/button_custom_theme"
        android:layout_width="match_parent"

        android:layout_marginTop="16dp"
        android:text="Подтвердить" />

</LinearLayout>