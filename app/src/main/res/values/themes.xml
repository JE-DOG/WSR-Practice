<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WSRPractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1A6FEE</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/chip_category_analezy</item>

    </style>

    <style name="edit_text_style">

        <item name="android:textColorHint">#939396</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:layout_height">48dp</item>

    </style>

    <style name="chip_category_analezy" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">10dp</item>
        <item name="chipBackgroundColor">@color/chip_enable_false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_custom_theme" parent="Widget.MaterialComponents.Button">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <!--/text-->
    <style name="headerTextView" parent="Widget.AppCompat.TextView">
        
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        
    </style>

    <style name="editTextDetail" parent="Widget.AppCompat.TextView">

        <item name="color">#7E7E9A</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginBottom">4dp</item>

    </style>

</resources>